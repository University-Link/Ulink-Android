<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_toolbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#fff"
    android:elevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="#363636"
            android:text="전자기학 공지"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="68dp"
            android:layout_toRightOf="@+id/tv_classname"
            android:src="@drawable/chatnotice_btn_plus"

            />


        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:src="@drawable/chatnotice_btn_home"
            android:layout_toRightOf="@+id/btn_plus"
            android:layout_marginVertical="20dp"


            />


    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>

