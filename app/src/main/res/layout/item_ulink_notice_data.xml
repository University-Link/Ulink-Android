<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_notice_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/class_notice_ic_assign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/1"
        android:layout_marginLeft="7dp"
        android:textColor="#363636"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/img_notice_category"
        app:layout_constraintBottom_toBottomOf="@id/img_notice_category"
        app:layout_constraintStart_toEndOf="@+id/img_notice_category"/>

    <TextView
        android:id="@+id/tv_notice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="휴강"
        android:textColor="#363636"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/img_notice_category"
        app:layout_constraintBottom_toBottomOf="@id/img_notice_category"
        app:layout_constraintStart_toEndOf="@id/tv_notice_date" />

<!--    <ImageView-->
<!--        android:id="@+id/img_notice_new"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:background="@drawable/class_ic_new"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/tv_notice_name"-->
<!--        app:layout_constraintStart_toEndOf="@+id/tv_notice_name"-->
<!--        app:layout_constraintTop_toTopOf="@+id/tv_notice_name" />-->

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="13:00 - 14:00"
        android:textColor="#5c5c5c"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/img_notice_category"
        app:layout_constraintTop_toBottomOf="@id/img_notice_category" />

    <Button
        android:id="@+id/btn_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/mypagr_btn_next"
        android:layout_marginVertical="17dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>