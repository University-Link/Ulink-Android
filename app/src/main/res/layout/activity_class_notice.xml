<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleNoticeActivity"
    android:background="@color/white">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_schedulenotice" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_schedule_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1차 쪽지시험"
            android:textColor="@color/text1"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_schedule_notice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020년 5월 3일"/>

            <TextView
                android:id="@+id/tv_schedule_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 13:00~14:00"/>
        </LinearLayout>

        <View
            android:id="@+id/underLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/tv_schedule_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쪽지시험 시험범위는 1장, 2장, 3장, 2장에서는 pg 45~50"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>