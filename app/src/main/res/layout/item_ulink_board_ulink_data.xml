<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="[문과대학]이달의 문대인 8월호"
        android:textColor="#363636"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toStartOf="@id/tv_content">

        <ImageView
            android:id="@+id/img_uni_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/ulinkboard_ic_unih" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유링크좋아"
            android:textColor="#727272"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/img_uni_tag"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />


    </LinearLayout>
    <ImageView
        android:id="@+id/img_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:visibility="invisible"
        android:background="@drawable/img_line"
        app:layout_constraintBottom_toBottomOf="@+id/layout_nickname"
        app:layout_constraintStart_toEndOf="@+id/layout_nickname"
        app:layout_constraintTop_toTopOf="@+id/layout_nickname" />

    <TextView
        android:id="@+id/tv_board_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulink게시판"
        android:layout_marginLeft="6dp"
        android:textColor="#727272"
        android:visibility="invisible"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_line"
        app:layout_constraintStart_toEndOf="@+id/img_line"
        app:layout_constraintTop_toTopOf="@+id/img_line" />

    <TextView
        android:id="@+id/tv_time"
        android:textSize="12sp"
        android:textColor="#989898"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방금"
        android:layout_marginTop="16dp"
        android:layout_marginRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:textSize="14sp"
        android:textColor="#363636"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="13dp"
        android:text="..혹시 과제 다 한사람? 정말 하기 싫네요.."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#e6e6e6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_nickname" />

    <ImageButton
        android:id="@+id/btn_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/class_board_ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#727272"
        android:text="좋아요"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_heart"
        app:layout_constraintStart_toEndOf="@+id/btn_heart"
        app:layout_constraintTop_toTopOf="@+id/btn_heart" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/class_board_ic_reply"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintStart_toEndOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/textView27" />

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textSize="12sp"
        android:textColor="#727272"
        android:text="댓글 2"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/class_board_ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comment_count"
        app:layout_constraintEnd_toStartOf="@+id/tv_heart_count"
        app:layout_constraintTop_toTopOf="@+id/tv_comment_count" />

    <TextView
        android:id="@+id/tv_heart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:text="999+"
        android:textSize="12sp"
        android:textColor="#727272"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>
