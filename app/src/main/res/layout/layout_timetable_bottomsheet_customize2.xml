<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="304dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_name"
        android:text="전자기학"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/text1"/>

    <ImageButton
        android:id="@+id/tv_ok"
        android:textColor="@color/white"
        android:text="확인"
        android:textSize="12sp"
        android:layout_width="44dp"
        android:layout_height="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/color_btn_change_check"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"/>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="20dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/view"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layout_color9"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/color_9"
                />
            <TextView
                android:text="진 블루"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_color13"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="23dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/color_13"
                />
            <TextView
                android:text="라일락 퍼플"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layout_color10"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_10"
                    />
                <TextView
                    android:text="애쉬 퍼플"
                   android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_color14"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_marginLeft="23dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_14"
                    />
                <TextView
                    android:text="베이비 핑크"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layout_color11"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_10"
                    />
                <TextView
                    android:text="문라이트 퍼플"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_color15"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_marginLeft="23dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_15"
                    />
                <TextView
                    android:text="라즈베리 핑크"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layout_color12"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_12"
                    />
                <TextView
                    android:text="와인 퍼플"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_color16"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_marginLeft="23dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_16"
                    />
                <TextView
                    android:text="코랄 핑크"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>