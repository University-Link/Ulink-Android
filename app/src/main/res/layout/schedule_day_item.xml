<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="21dp">

    <TextView
        android:id="@+id/schedule_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30일"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/schedule_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" (목) "
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/schedule_day"
        app:layout_constraintTop_toTopOf="@id/schedule_day"
        />

    <TextView
        android:id="@+id/schedule_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" D-1"
        android:textSize="13sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@id/schedule_date"
        app:layout_constraintTop_toTopOf="@id/schedule_day"
        />
</androidx.constraintlayout.widget.ConstraintLayout>