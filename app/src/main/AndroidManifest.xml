<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulink.ulink">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.ulink.ulink.register.RegisterActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.ulink.ulink.Activity.FilterNormalActivity" />
        <activity android:name="com.ulink.ulink.Activity.FilterMajorActivity" />
        <activity
            android:name="com.ulink.ulink.Activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ulink.ulink.Activity.LoginActivity"></activity>
        <activity android:name="com.ulink.ulink.Activity.EvaluationActivity"></activity>
        <activity android:name="com.ulink.ulink.Activity.FilterSettingSearchActivity" />
        <activity android:name="com.ulink.ulink.Activity.ScheduleNoticeActivity" />
        <activity android:name="com.ulink.ulink.timetable.TimeTableListActivity" />
        <activity android:name="com.ulink.ulink.Activity.NotificationActivity" />
        <activity android:name="com.ulink.ulink.Activity.ScheduleActivity" />
        <activity android:name="com.ulink.ulink.timetable.TimeTableDirectEditActivity" />
        <activity android:name="com.ulink.ulink.timetable.TimeTableDirectTypeActivity" />
        <activity android:name="com.ulink.ulink.timetable.TimeTableEditActivity" />
        <activity android:name="com.ulink.ulink.MainActivity" />
        <activity android:name="com.ulink.ulink.Activity.ChattingActivity" />
        <activity android:name="com.ulink.ulink.Activity.NoticeActivity" />
        <activity android:name="com.ulink.ulink.Activity.NoticeMoreActivity" />
        <activity android:name="com.ulink.ulink.Activity.NoticeAddActivity" />
    </application>

</manifest>