<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulink.ulink">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.CommunityGuideActivity"></activity>
        <activity android:name=".Activity.FAQActivity" />
        <activity android:name=".withdrawal.WithdrawalActivity" />
        <activity android:name=".register.CollectAgreeActivity"></activity>
        <activity android:name=".register.ServiceAgreeActivity" />
        <activity android:name=".Activity.ChangePasswordActivity" />
        <activity android:name=".Ulink.UlinkBoardWriteActivity">
            android:windowSoftInputMode="adjustResize"
        </activity>
        <activity android:name=".Ulink.BoardCommentRecycler.BoardDetailActivity" />
        <activity android:name=".Ulink.BoardSearchActivity" />
        <activity android:name=".myActivity.MyActivityActivity" />
        <activity android:name=".Activity.ChangeNickNameActivity" />
        <activity android:name=".Activity.ChangeMajorActivity" />
        <activity android:name=".Activity.SchoolCertificateActivity" />
        <activity android:name=".Ulink.UlinkInsideActivity" />

        <activity android:name=".NewAppWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".Activity.FilterNormalActivity" />
        <activity android:name=".Activity.FilterMajorActivity" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.EvaluationActivity" />
        <activity android:name=".Activity.FilterSettingSearchActivity" />
        <activity android:name=".Activity.ScheduleNoticeActivity" />
        <activity android:name=".timetable.TimeTableListActivity" />
        <activity android:name=".Activity.NotificationActivity" />
        <activity android:name=".Activity.ScheduleActivity" />
        <activity android:name=".timetable.TimeTableDirectEditActivity" />
        <activity android:name=".timetable.TimeTableDirectTypeActivity" />
        <activity android:name=".timetable.TimeTableEditActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Activity.ChattingActivity" />
        <activity android:name=".Activity.NoticeActivity" />
        <activity android:name=".Activity.NoticeMoreActivity" />
        <activity android:name=".Activity.NoticeAddActivity" />
        <activity android:name=".Ulink.UlinkUniversityBoardActivity" />
        <activity android:name=".Ulink.UlinkUlinkBoardActivity" />
        <receiver android:name=".NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>
    </application>
</manifest>